{
  "extends": "@sapphire/ts-config",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "declarationMap": false,
    "declaration": false,
    "resolveJsonModule": true
  },
  "include": ["src", "src/languages/**/*.json"],
  "exclude": ["node_modules"]
}
